{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "strictPropertyInitialization": false,
    "strictNullChecks": false, // Loosen strictness if not critical for the project
    "noUnusedParameters": true, // Catch unused function parameters
    "noUnusedLocals": true, // Catch unused local variables
    "noImplicitAny": false, // Allow implicit `any` to reduce errors

    "target": "es2017",
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true, // Enable incremental builds
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Avoid issues with certain libraries
    "moduleResolution": "node", // Ensure compatibility with Node.js
    "resolveJsonModule": true // Allow importing JSON files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
